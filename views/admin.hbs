{{!-- Contenido admin --}}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Panel de Administración</h1>

            {{!-- Alertas --}}
            <div id="alert-container"></div>

            {{!-- Alerta bienvenida --}}
            <div class="alert alert-info">
                <h4 class="alert-heading">Bienvenido al panel de administración</h4>
            </div>
        </div>
    </div>

    <div class="row">

        {{!-- Tabla de paginas creadas --}}
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Páginas Creadas</h3>
                    <button id="btn-refresh" class="btn btn-sm btn-info">Actualizar</button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Ruta</th>
                                    <th>Archivo</th>
                                    <th>Enlace</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>/ (main)</strong></td>
                                    <td><em>Por defecto</em></td>
                                    <td><a href="/">Ver página</a></td>
                                    <td>
                                        <button class="btn btn-sm btn-warning" disabled>Editar</button>
                                    </td>
                                </tr>

                            <tbody id="pageslist"></tbody>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Formulario para nuevas paginas --}}
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3>Crear nueva página</h3>
                </div>
                <div class="card-body">
                    <form id="page-form">
                        <div class="mb-3">
                            <label for="ruta" class=" form-label ">Ruta: </label>
                            <input type="text" class="form-control" id="ruta" placeholder="ej: nosotros">
                            <small class="text-muted"> Sin barras, ej: "nosotros" crea /nosotros </small>
                        </div>
                        <div class="mb-3">
                            <label for="contenido" class=" form-label ">Contenido HTML: </label>
                            <textarea class="form-control" id="contenido" rows="8"
                                placeholder="<h1>Página nueva</h1><p>Contenido ...</p>"></textarea>
                        </div>

                        <button type="submit" class=" btn btn-success w-100 ">Crear nueva página</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- Modal para editar las páginas --}}
{{!-- Boton oculto para abrir el modal --}}
<button type="button" id="editModalBtn" class="btn btn-primary d-none" data-bs-toggle="modal" data-bs-target="#editModal"></button>

{{!-- Modal bootstrap --}}
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class=" modal-dialog modal-lg ">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Editar Página</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <textarea id="editContenido" class="form-control" rows="12"></textarea>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="saveEditBtn">Guardar Cambios</button>
            </div>

        </div>
    </div>
</div>

{{!-- Scripts --}}
<script src="/js/myweb_client.js"></script>
<script src="/js/admin.js"></script>